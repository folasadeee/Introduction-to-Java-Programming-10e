import java.util.Scanner;

public class Exercise_03_33 {
	public static void main(String[] args) {
  Scanner input = new Scanner(System.in);

// Prompt user to input weight and price
	System.out.print("Enter weight and price for package 1: ");
	float weight1 = input.nextFloat();
	float price1 = input.nextFloat();

	System.out.print("Enter weight and price for package 2: ");
	float weight2 = input.nextFloat();
	float price2 = input.nextFloat();


// Evaluate cost per unit of weight
	float costPerUnit1 = price1 / weight1;
	float costPerUnit2 = price2 / weight2;

// Display result
	if (costPerUnit1 < costPerUnit2)
		System.out.println ("Package 1 has a better price.");

	else if (costPerUnit1 > costPerUnit2)
		System.out.println ("Package 2 has a better price.");

	else
		System.out.println ("Each package is equally cost-effective.");
	
	}
}
